[hub]
        protocol = https
[user]
        name = Marcelo Andrade R.
        email = marcelo.andrade.r@gmail.com
[credential]
        helper = cache
[credential "https://github.com"]
        helper =
        helper = !/usr/bin/gh auth git-credential
[alias]
        co = checkout
        cp = cherry-pick
        promote = ~/bin/git-promote
        wtf     = ~/bin/git-wtf
        rank-contributors = ~/bin/git-rank-contributors
        count   = !git shortlog -sn
        st = status -sb
        ci = commit
        branchauthors = "! git-branch-authors"
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = nvim
        pager = less -r
	fileMode = false
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta     
[diff]
    tool = meld
    word-diff = porcelain
    # noprefix = true
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[help]
    autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to surpress warning message
        default = simple
[init]
	defaultBranch = main
[safe]
	directory = /opt/tm2-api/vendor/igorsantos07/phalcon-queue-db
[merge]
	tool = meld
[pull]
	rebase = true
